<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    style="@style/parent.contentLayout"
    android:background="#00000000">

    <androidx.cardview.widget.CardView
        android:id="@+id/teacher"
        android:layout_width="282dp"
        android:layout_height="155dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toTopOf="@+id/student"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <net.colindodd.gradientlayout.GradientRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="100dp"
            android:padding="10dp"
            gl:end_color="@color/trueyellow"
            gl:orientation="LEFT_RIGHT"
            gl:start_color="@color/gradientLightGreen"
            tools:ignore="MissingClass">

            <ImageView
                style="@style/homeCardImage"
                android:maxHeight="90dp"
                android:src="@drawable/teacher" />

            <TextView
                android:id="@+id/textViewSub6Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEACHER SECTION"
                android:textStyle="bold"
                android:textSize="16sp" />

        </net.colindodd.gradientlayout.GradientRelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/student"
        android:layout_width="282dp"
        android:layout_height="155dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacher"
        app:layout_constraintVertical_bias="0.0">

        <net.colindodd.gradientlayout.GradientRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="100dp"
            android:padding="10dp"
            gl:end_color="@color/clothgradRIGHT"
            gl:orientation="LEFT_RIGHT"
            gl:start_color="@color/news">

            <ImageView
                style="@style/homeCardImage"
                android:maxHeight="90dp"
                android:src="@drawable/student" />

            <TextView
                android:id="@+id/textViewSub2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STUDENT SECTION"
                android:textStyle="bold"
                android:textSize="16sp" />

        </net.colindodd.gradientlayout.GradientRelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>